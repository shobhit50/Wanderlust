<% layout("layouts/boilerplate") -%>

    <body>
        <div class="row">
            <div class="col-md-8  offset-md-3 offset-sm-5">
                <h2>Listing</h2>
                <div class="card " style="width: 39vw; border: none; margin-bottom: 2rem;">
                    <img src=<%=allListings.image %> class="card-img-top show-img img-fluid" alt="..." >
                    <div class="card-body" style="
                    padding-left: 0px;
                ">
                        <h5 class="card-title">
                            <%= allListings.title %>
                        </h5>
                        <!-- this is for user detiles -->
                        <p>
                            ownerBy <%= allListings.owner.username %>
                        </p>

                        <!--             -->
                        <p class="card-text">
                            <%= allListings.description %>
                        </p>
                        <p>
                            <% if (allListings.price !==null && typeof allListings.price==='number' ) { %>
                                â‚¹<%= allListings.price.toLocaleString("en-in") %> / night
                                    <% } else { %>
                                        Price Not Available
                                        <% } %>
                                            <br>
                                            <%= allListings.location %> <br>
                                                <%= allListings.country %>
                        </p>
                        <div class="delete-btn">
                            <a href="/listings/Edit/<%= allListings._id %>" method="GET"
                                class="btn btn-primary show-btn">Edit</a>
                            <form action="/listings/<%= allListings._id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-primary">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <hr>
        <div class="col-md-8  offset-md-3 offset-sm-5">
            <h3 class="mb-3">Leave a Review</h3>

            <form action="/listings/<%= allListings._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="range" class="form-label">Rating</label>
                    <input type="range" name="review[rating]" min="1" max="5">
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">comment</label>
                    <textarea name="review[comment]" class="form-control" id="" cols="30" rows="5" required></textarea>
                    <div class="invalid-feedback">
                        Please leave a comment.
                    </div>
                </div>

                <button class="btn btn-dark mb-3">submit</button>


            </form>

        </div>
        <hr>
        <h3 class="mb-3 col-md-8  offset-md-3 ">All Review</h3>
        <div class="row offset-md-3 offset-sm-5">
            <% for (let review of allListings.rewiews) { %>

                <div class="card text-white bg-secondary mb-3 col-md-8 ml-3"
                    style="max-width: 18rem; margin-right: 2.5rem;">
                    <div class="card-header">
                        <%= review.comment %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= review.rating %>
                        </h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the
                            card's content.</p>
                    </div>
                    <form action="/listings/<%= allListings._id %>/reviews/<%=review._id%>?_method=DELETE"
                        method="post">
                        <button type="submit" class="btn btn-primary mb-3" style="margin-left: 1rem;">Delete</button>
                    </form>

                </div>

                <% } %>
        </div>


    </body>